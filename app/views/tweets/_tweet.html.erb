<div class="contents_post"> 
 <div class="contents_img">
  <%= image_tag(tweet.image) %>
 </div>
  <p><%= simple_format(tweet.text) %></p>
  <span class="name">
    <a href="/users/<%= tweet.user_id %>", class="post_name">
      <span>投稿者</span><%= tweet.user.nickname %>
    </a>
  </span>
  <div class="more">
    <ul class="more_lists">
      <% if  user_signed_in? && current_user.id == tweet.user_id %>
        <li class="more_list">
          <button>
            <%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get , class: "button_name" %>
          </button>
        </li>
        <li class="more_list">
          <button>
            <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete , class: "button_name" %>
          </button>
        </li>
      <% end %>
    </ul>
  </div>
</div>

